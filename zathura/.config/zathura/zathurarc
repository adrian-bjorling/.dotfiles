set font                        "JetBrains Nerd Font 9"
set default-bg                  "#1e2127" #00
set default-fg                  "#abb2bf" #01

set statusbar-fg                "#abb2bf" #04
set statusbar-bg                "#1e2127" #01

set inputbar-bg                 "#1e2127" #00 currently not used
set inputbar-fg                 "#abb2bf" #02

set notification-error-bg       "#1e2127" #08
set notification-error-fg       "#e5c07b" #00

set notification-warning-bg     "#1e2127" #08
set notification-warning-fg     "#e06c75" #00

set highlight-color             "#1e2127" #0A
set highlight-active-color      "#abb2bf" #0D

set completion-highlight-fg     "#4e4e4e" #02
set completion-highlight-bg     "#87afaf" #0C

set completion-bg               "#4e4e4e" #02
set completion-fg               "#abb2bf" #0C

set notification-bg             "#1e2127" #0B
set notification-fg             "#458588" #00

set recolor-lightcolor          "#1e2127" #00
set recolor-darkcolor           "#abb2bf" #06
set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue "false"

set selection-clipboard "clipboard"

# keybindings
map [fullscreen] a adjust_window best-fit
map [fullscreen] s adjust_window width
map [fullscreen] f follow
map [fullscreen] <Tab> toggle_index
map [fullscreen] j scroll down
map [fullscreen] k scroll up
map [fullscreen] h navigate previous
map [fullscreen] l navigate next
